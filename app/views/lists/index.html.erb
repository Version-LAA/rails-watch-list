<%= render "shared/navbar"%>
<%= render "banner"%>

<div class="container mt-3">
  <div class="cards">
    <%@lists.each do |list|%>
    <div class="card" style="width: 400px; height:300px;background-image:linear-gradient(rgba(0,0,0,0.7),
     rgba(0,0,0,0.5)),
      url('<%= cl_image_path list.photo.key,
       height: 300,
       crop: :fill,
       opacity: 70,
       aspect_ratio: "4:3",
       gracity: "auto" %>')">
      <div class="card-body">
        <h2 class="cards-title"><%=link_to list.name,list_path(list),class:"cards-text"%></h2>
      </div>
    </div>
    <%end%>
  </div>
</div>
