<%= render "shared/navbar"%>
<h1><%=@list.name%></h1>

<div class="container">
  <%if @list.photo.attached?%>
    <%=cl_image_tag @list.photo.key,height: 300, width: 300%>
  <%end%>
  <br>
   <%=link_to "Add Movie",new_list_bookmark_path(@list),class:"btn btn-primary"%>
   <div class="row">
    <%@bookmarks.each do |bookmark|%>
      <div class="col">
        <div class="col-lg-3 card m-3" style="width: 15rem;">
          <img src="<%=bookmark.movie.poster_url%>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%=bookmark.movie.title%></h5>
            <p class="card-text"><%=bookmark.comment%></p>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>
