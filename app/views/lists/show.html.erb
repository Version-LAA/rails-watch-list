<%= render "shared/navbar"%>



<div class="container mt-4">
  <h1 class="mb-4"><%=@list.name%></h1>
  <div class="show-pic mb-3">
    <%if @list.photo.attached?%>
      <%=cl_image_tag(@list.photo.key,
       height: 300,
       width: 350,
       radius: 60)%>
    <%end%>
  </div>
  <div class="button-show">
    <%=link_to "Add Movie",new_list_bookmark_path(@list),class:"btn btn-primary btn-lg btn-block btn-show"%>
   </div>
  <br>

   <div class="row">
    <%@bookmarks.each do |bookmark|%>
      <div class="col">
        <div class="col-lg-3 card m-3" style="width: 20rem;">
          <img src="<%=bookmark.movie.poster_url%>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title show-card"><%=bookmark.movie.title%></h5>
            <p class="card-text show-card"><%=bookmark.comment%></p>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>
